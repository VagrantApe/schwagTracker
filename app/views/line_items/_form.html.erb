<%= simple_form_for @line_item, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :product_id %>
  <%= f.input :order_id %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                line_items_path, :class => 'btn' %>
  </div>
<% end %>
